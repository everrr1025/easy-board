{
  "name": "Easy Board",
  "description": "Manage your bookmarks with tags quickly & easily.",
  "version": "1.0",
  "manifest_version": 3,
  "background": {
    "service_worker": "background.js"
  },

  "chrome_url_overrides": {
    "newtab": "/src/pinecone.html"
  },
  "permissions": ["storage", "tabs", "bookmarks", "activeTab", "scripting"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "/src/static/pinecone.png",
      "32": "/src/static/pinecone.png",
      "48": "/src/static/pinecone.png",
      "128": "/src/static/pinecone.png"
    }
  },
  "icons": {
    "16": "/src/static/pinecone.png",
    "32": "/src/static/pinecone.png",
    "48": "/src/static/pinecone.png",
    "128": "/src/static/pinecone.png"
  }
}
